<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
      <% if tweet.user == current_user %>
        <p><%= link_to 'Edit', edit_tweet_path(tweet) %></p>
        <p><%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %>
    
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "New tweet", new_tweet_path %>
<% end %>
